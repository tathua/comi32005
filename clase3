let tabla = parseInt(prompt("Ingrese un número"))

for(let num = 1 ; num <=10 ; num ++){
    let result = num * tabla
    if (num == 4 || num ==8 || num==9 ){ //4, 8, 9
        continue
    }
    alert( tabla + "x" + num + "=" + result)
}


//SWITCH

let num= 13

switch(num){ //si
    case 2:
        alert("Tu núm es 2")
        break;
    case 10:
        alert("Tu núm es 10")
        break;
    case 20:
        alert("Tu núm es 20")
        break;
    case 13:
        alert("Acertaste")
        break;
    default: //sino
        alert("Ingresaste una letra")
}
